<script>
		$(document).ready(function(){
			
			var selected = null;
			$.ajax({
				type: "GET",
				url: "../friends/request/friends_list",
				success: function(msg){
					request = msg['request'];
					if (request == "success"){
						friends = msg['my_friends'];
						out_pending = msg['out_pending']
						in_pending = msg['in_pending']
						for (var friend in out_pending){

							$('#out_pending_list').append($('<li><span>'+out_pending[friend]+'</span></li>'));
						}
						for (var friend in in_pending){

							$('#in_pending_list').append($('<li><span>'+in_pending[friend]+'</span><button class="approve-button">âˆš</button><button class="decline-button">x</button></li>'));
						}
						for (var friend in friends){

							$('#friend_list').append($('<li><span>'+friends[friend].email+'</span></li>'));
						}

					}

				}
			});
		});

</script>